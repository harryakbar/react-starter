/*
*   tsconfig.json contains TypeScript-specific options for our project.
*   We also have a tsconfig.prod.json and a tsconfig.test.json 
*   in case we want to make any tweaks to our production builds, or our test builds.
*/

{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "public",
    "build"
  ]
}